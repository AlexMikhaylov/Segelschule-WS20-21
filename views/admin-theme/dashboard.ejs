<%- include('./partials/header') %>

    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Dashboard</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-dark">
                        <div class="inner">
                            <h3><%= kunden%></h3>

                            <p>Kunden</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="/kunden-verwalten" class="small-box-footer">Mehr <i
                                class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-dark">
                        <div class="inner">
                            <h3><%= kurse%></h3>

                            <p>Kurse</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="/kurse-verwalten" class="small-box-footer">Mehr <i
                                class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-dark">
                        <div class="inner">
                            <h3><%= buchungen%></h3>

                            <p>Buchungen</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="/buchungen" class="small-box-footer">Mehr <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-dark">
                        <div class="inner">
                            <h3><%= mitarbeiter%></h3>

                            <p>Mitarbeiter</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="/mitarbeiter" class="small-box-footer">Mehr <i
                                class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
            </div>

            <%if(kursplan >= 0 && kursMax >= 0){%>
                <div class="row">
                    <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                          <h3 class="card-title">Kursbelegung</h3>
          
                          <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
                            </button>
                          </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                          <div class="row">
                            <div class="col-md-8">
                              <div class="chart-responsive">
                                <canvas id="pieChart" height="150"></canvas>
                              </div>
                              <!-- ./chart-responsive -->
                            </div>
                            <!-- /.col -->
    
    
    
                            <div class="col-md-4">
                                
                              <ul class="chart-legend clearfix">
                        
                                <li><i class="far fa-circle text-danger"></i> eingeschrieben</li>
                                <input type="hidden" id="eingeschrieben" value="<% if(kursplan) { %><%= kursplan %><% } else { %>0<%}%>">
                                <input type="hidden" id="kursMax" value="<% if(kursMax) { %><%= kursMax %><% } else { %>0<%}%>">
    
                                <li><i class="far fa-circle text-success"></i> verfügbar</li>
                              </ul>
                              
                            </div>
                            <!-- /.col -->
                          </div>
                          <!-- /.row -->
                        </div>
                        <!-- /.card-body -->
                      </div>
                      <!-- /.card -->
                    </div>
    
                    
                </div>
            <%} else {%>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                              <h3 class="card-title">keine Kurspläne für die Analyse vorhanden</h3>
                            </div>
                        </div>
                    </div>
                </div>                
            <%}%>


            <!-- /.container-fluid -->
    </section>
    <!-- /.content -->

    <%- include('./partials/footer') %>