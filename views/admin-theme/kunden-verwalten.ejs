<%- include('./partials/header') %>

    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Kunden verwalten</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Kunden verwalten</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->

            <div class="row">
                <div class="col-md-12">
                    <!-- general form elements disabled -->
                    <div class="card card-dark">
                        <div class="card-header">
                            <h3 class="card-title">Kundenverwaltung</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="table-list-customers" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#ID</th>
                                        <th>Bild</th>
                                        <th>Name</th>
                                        <th>Adresse</th>
                                        <th>E-Mail</th>
                                        <th>Telefon</th>
                                        <th>Geburtsdatum</th>
                                        <th>Anzahl</th>
                                        <th>Aktion</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(kunden.length> 0) { %>
                                        <% for (let kunde of kunden) { %>
                                            <tr>
                                                <td>
                                                    <%= kunde.id %>
                                                </td>
                                                <td>
                                                    <% if(!kunde.profilbild) { %>
                                                        <img class="direct-chat-img" src="/dist/img/avatar.png"
                                                            alt="profilbild">
                                                        <% } else {%>
                                                            <img class="direct-chat-img" src="<%= kunde.profilbild %>"
                                                                alt="profilbild">
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <% if(kunde.anrede==='Herr' || kunde.anrede==='Frau' ) { %>
                                                        <%= kunde.anrede %>
                                                            <% } %>
                                                                <%= kunde.name1 %>
                                                                    <%= kunde.name2 %>
                                                </td>
                                                <td>
                                                    <%= kunde.Adresses[0].strasse %>
                                                        <%= kunde.Adresses[0].ort %>
                                                            <%= kunde.Adresses[0].plz %>
                                                                <%= kunde.Adresses[0].land %>
                                                </td>
                                                <td>
                                                    <%= kunde.email %>
                                                </td>
                                                <td>
                                                    <%= kunde.telefon %>
                                                </td>
                                                <td>
                                                    <%= kunde.geburtsdatum %>
                                                </td>
                                                <td>
                                                    <% if (kunde.anzahl===1) { %>
                                                        Einzelkunde
                                                        <% } else { %>
                                                            <%= kunde.anzahl %> Personen
                                                                <% } %>
                                                </td>
                                                <td>
                                                    <a href="/kunden-verwalten/<%= kunde.id %>?edit=true"
                                                        class="btn btn-primary"><i class="fa fa-edit"></i></a>

                                                    <form action="/kunden-loeschen" method="POST" id="frm-delete-customer-<%= kunde.id %>">

                                                        <input type="hidden" name="kundenId" value="<%= kunde.id %>">

                                                    </form>    
                                                        <a href="javascript:void(0)" onclick="if(confirm('Bist Du sicher, dass dieser Kunde gelÃ¶scht werden soll?')) { $('#frm-delete-customer-<%= kunde.id %>').submit() }" class="btn btn-danger"><i
                                                                class="fa fa-trash"></i></a>
                                                    

                                                </td>
                                            </tr>
                                            <% } %>
                                                <% } %>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#ID</th>
                                        <th>Bild</th>
                                        <th>Name</th>
                                        <th>Adresse</th>
                                        <th>E-Mail</th>
                                        <th>Telefon</th>
                                        <th>Geburtsdatum</th>
                                        <th>Anzahl</th>
                                        <th>Aktion</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

    <%- include('./partials/footer') %>