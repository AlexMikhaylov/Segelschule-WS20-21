<!DOCTYPE html>
<html lang="de">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description"
    content="Dummy Website für das Verwaltungsportal der Segelschule, Projekt an der FH Kiel, WS 20/21">
  <!-- Favicon icon -->
  <link rel="icon" type="image/ico" sizes="16x16" href="/assets/images/favicon.ico">
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png">
  <link rel="manifest" href="/assets/site.webmanifest">
  <title>Segelschule</title>
  <!-- font awesome -->
  <link rel="stylesheet" href="/fontawesome-free-5.12.0-web/css/all.min.css" />
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles_homepage.css" />

</head>

<body>
  <header id="home">
    <!-- navbar -->
    <nav id="nav">
      <div class="nav-center">
        <!-- nav header -->
        <div class="nav-header">
          <a href="/"><img src="/images/logo_homepage.jpg" class="logo" alt="logo" /></a>
          <button class="nav-toggle">
            <i class="fas fa-bars"></i>
          </button>
        </div>
        <!-- links -->
        <div class="links-container">
          <ul class="links">
            <li>
              <a href="#home" class="scroll-link">Hauptseite</a>
            </li>
            <li>
              <a href="#about" class="scroll-link">Über das Projekt</a>
            </li>
            <li>
              <a href="#services" class="scroll-link">Unser Team</a>
            </li>
            <li>
              <a href="#tours" class="scroll-link">Kursangebot</a>
            </li>
            <li>
              <a href="http://login.surfsailingschool.de" target="_bank">Login</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- banner -->
    <div class="banner">
      <div class="container">
        <h1>Surf and Sailing School</h1>
        <p>
          Die beste Segelschule an der Ostseeküste
        </p>
        <a href="#tours" class="scroll-link btn btn-white">Zum Kursangebot</a>
      </div>
    </div>
  </header>
  <!-- about -->
  <section id="about" class="section">
    <div class="title">
      <h2>Über das <span>Projekt</span></h2>
    </div>

    <div>
      <p class="title">
        Semesterprojekt an der Fachhochschule Kiel im WS 2020/2021: <a href="http://login.surfsailingschool.de">Softwareprojekt "Segelschule"</a> </p>
        <p class="title">Autoren: Alexander Mikhaylov und Mattis Benjamin Riehl</p>
    </div>


  </section>
  <!-- services -->
  <section id="services" class="section">
    <div class="title">
      <h2>unser <span>Team</span></h2>
    </div>

    <div class="section-center">
      <% if(mitarbeiter.length> 0) { %>

        <% for (let ma of mitarbeiter) { %>
          <div class="menu-item">
            <% if(!ma.profilbild) { %>
              <img class="photo" src="/dist/img/avatar2.png" alt="logo">
              <% } else {%>
                <img class="photo" src="<%= ma.profilbild %>" alt="profilbild">
                <% } %>
  
                <div class="item-info">
                  
                    <h4><%= ma.vorname %> <%= ma.nachname %></h4>
                    <h4 class="price">Qualifikationen: 
         
                    </h4>
                  
                  <p class="item-text">
                    <%= ma.qualifikationen %>
                  </p>
                  <p class="item-text">
                    <%= ma.email %>
                  </p>
                </div>
          </div>
  
        <% } %>
      <% } %>
    </div>
  </section>
  <!-- contact -->
  <section id="tours" class="section">
    <div class="title">
      <h2>Unsere <span>Kurse</span></h2>
    </div>

    <div class="section-center">
      <% if(kurse.length> 0) { %>

        <% for (let kurs of kurse) { %>
          <div class="menu-item">
            <% if(!kurs.kursLogo) { %>
              <img class="photo" src="/assets/images/icon.png" alt="logo">
              <% } else {%>
                <img class="photo" src="<%= kurs.kursLogo %>" alt="profilbild">
                <% } %>
  
                <div class="item-info">
                  
                    <h4><%= kurs.kursName %></h4>
                    <h4 class="price">€ <%= kurs.preisKurs %></h4>
                  
                  <p class="item-text">
                    <%= kurs.beschreibung %>
                  </p>
                </div>
          </div>
  
        <% } %>
      <% } %>
    </div>
  </section>
  <!-- footer -->
  <footer class="section">
    <p>
      &copy; Alexander Mikhaylov, Mattis Benjamin Riehl
      <span id="date"></span>.<br> Semesterprojekt an der Fachhochschule Kiel, Wintersemester 20/21
    </p>
  </footer>
  <a class="scroll-link top-link" href="#home">
    <i class="fas fa-arrow-up"></i>
  </a>
  <!-- javascript -->
  <script src="/js/script_homepage.js"></script>
</body>

</html>